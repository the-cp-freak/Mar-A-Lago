<body>

  <h1>Pick the Better Photo</h1>
  <input id="upload" type="file" accept="image/*" multiple>

  <div class="container">
    <div class="photo-box" id="leftBox"></div>
    <div class="photo-box" id="rightBox"></div>
  </div>

  <div id="hint">Click the photo you prefer</div>

  <script>
    let images = [];
    let leftIndex = null;
    let rightIndex = null;

    const uploadInput = document.getElementById("upload");
    const leftBox = document.getElementById("leftBox");
    const rightBox = document.getElementById("rightBox");

    uploadInput.addEventListener("change", (e) => {
      images = Array.from(e.target.files);
      if (images.length < 2) {
        alert("Please upload at least 2 photos.");
        return;
      }
      start();
    });

    function start() {
      leftIndex = getRandomIndex();
      rightIndex = getRandomIndex([leftIndex]);
      render();
    }

    function render() {
      leftBox.innerHTML = `<img src="${URL.createObjectURL(images[leftIndex])}">`;
      rightBox.innerHTML = `<img src="${URL.createObjectURL(images[rightIndex])}">`;
    }

    function getRandomIndex(exclude = []) {
      let index;
      do {
        index = Math.floor(Math.random() * images.length);
      } while (exclude.includes(index));
      return index;
    }

    leftBox.addEventListener("click", () => {
      // left wins, replace right
      rightIndex = getRandomIndex([leftIndex]);
      render();
    });

    rightBox.addEventListener("click", () => {
      // right wins, replace left
      leftIndex = getRandomIndex([rightIndex]);
      render();
    });
  </script>

</body>
</html>
